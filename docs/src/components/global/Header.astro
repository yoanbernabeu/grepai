---
import Logo from './Logo.astro';
import Search from './Search.astro';
import { navigation } from '../../utils/navigation';

const navItems = [
  { label: 'Docs', href: '/grepai/getting-started/' },
  { label: 'Installation', href: '/grepai/installation/' },
  { label: 'Configuration', href: '/grepai/configuration/' },
  { label: 'Blog', href: '/grepai/blog/' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-glass-border bg-surface/80 backdrop-blur-xl">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/grepai/" class="flex items-center hover:opacity-80 transition-opacity">
        <Logo size={28} />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="px-4 py-2 text-sm font-medium text-gray-400 hover:text-white transition-colors rounded-lg hover:bg-white/5"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Right side -->
      <div class="flex items-center gap-4">
        <!-- Search -->
        <Search />

        <!-- GitHub Link -->
        <a
          href="https://github.com/yoanbernabeu/grepai"
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 text-gray-400 hover:text-white transition-colors rounded-lg hover:bg-white/5"
          aria-label="GitHub"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>

        <!-- Mobile menu button -->
        <button
          id="sidebar-toggle"
          class="lg:hidden p-2 text-gray-400 hover:text-white transition-colors rounded-lg hover:bg-white/5"
          aria-label="Toggle menu"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="4" x2="20" y1="12" y2="12" />
            <line x1="4" x2="20" y1="6" y2="6" />
            <line x1="4" x2="20" y1="18" y2="18" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<!-- Mobile sidebar overlay -->
<div id="sidebar-overlay" class="hidden fixed inset-0 bg-black/50 z-40 lg:hidden"></div>

<!-- Mobile sidebar -->
<aside
  id="mobile-sidebar"
  class="fixed top-16 left-0 w-72 h-[calc(100vh-4rem)] bg-surface border-r border-glass-border z-50 transform -translate-x-full transition-transform duration-300 lg:hidden overflow-y-auto"
>
  <nav class="p-4 space-y-6">
    {navigation.map((section) => (
      <div>
        <h3 class="px-3 mb-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">
          {section.title}
        </h3>
        <ul class="space-y-1">
          {section.items.map((item) => (
            <li>
              <a
                href={item.href}
                class="block px-3 py-2 text-sm text-gray-400 hover:text-white transition-colors rounded-lg hover:bg-white/5"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </nav>
</aside>

<script>
  function initMobileMenu() {
    const toggleBtn = document.getElementById('sidebar-toggle');
    const sidebar = document.getElementById('mobile-sidebar');
    const overlay = document.getElementById('sidebar-overlay');

    if (toggleBtn && sidebar && overlay) {
      // Remove old listeners by cloning
      const newToggleBtn = toggleBtn.cloneNode(true);
      toggleBtn.parentNode?.replaceChild(newToggleBtn, toggleBtn);

      const newOverlay = overlay.cloneNode(true);
      overlay.parentNode?.replaceChild(newOverlay, overlay);

      newToggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('translate-x-0');
        sidebar.classList.toggle('-translate-x-full');
        newOverlay.classList.toggle('hidden');
      });

      newOverlay.addEventListener('click', () => {
        sidebar.classList.add('-translate-x-full');
        sidebar.classList.remove('translate-x-0');
        newOverlay.classList.add('hidden');
      });
    }
  }

  // Run on page load
  initMobileMenu();

  // Re-run on Astro page transitions
  document.addEventListener('astro:page-load', initMobileMenu);
</script>
