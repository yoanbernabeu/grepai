---
import { siAnthropic, siCursor, siGo, siTypescript, siJavascript, siPython, siPhp, siRust, siZig, siC, siCplusplus } from 'simple-icons';
// Works With Section - Compatible tools and integrations

// OpenAI logo path (not in simple-icons)
const openaiPath = "M22.282 9.821a5.985 5.985 0 0 0-.516-4.91 6.046 6.046 0 0 0-6.51-2.9A6.065 6.065 0 0 0 4.981 4.18a5.985 5.985 0 0 0-3.998 2.9 6.046 6.046 0 0 0 .743 7.097 5.98 5.98 0 0 0 .51 4.911 6.051 6.051 0 0 0 6.515 2.9A5.985 5.985 0 0 0 13.26 24a6.056 6.056 0 0 0 5.772-4.206 5.99 5.99 0 0 0 3.997-2.9 6.056 6.056 0 0 0-.747-7.073zM13.26 22.43a4.476 4.476 0 0 1-2.876-1.04l.141-.081 4.779-2.758a.795.795 0 0 0 .392-.681v-6.737l2.02 1.168a.071.071 0 0 1 .038.052v5.583a4.504 4.504 0 0 1-4.494 4.494zM3.6 18.304a4.47 4.47 0 0 1-.535-3.014l.142.085 4.783 2.759a.771.771 0 0 0 .78 0l5.843-3.369v2.332a.08.08 0 0 1-.033.062L9.74 19.95a4.5 4.5 0 0 1-6.14-1.646zM2.34 7.896a4.485 4.485 0 0 1 2.366-1.973V11.6a.766.766 0 0 0 .388.676l5.815 3.355-2.02 1.168a.076.076 0 0 1-.071 0l-4.83-2.786A4.504 4.504 0 0 1 2.34 7.896zm16.597 3.855l-5.833-3.387L15.119 7.2a.076.076 0 0 1 .071 0l4.83 2.791a4.494 4.494 0 0 1-.676 8.105v-5.678a.79.79 0 0 0-.407-.667zm2.01-3.023l-.141-.085-4.774-2.782a.776.776 0 0 0-.785 0L9.409 9.23V6.897a.066.066 0 0 1 .028-.061l4.83-2.787a4.5 4.5 0 0 1 6.68 4.66zm-12.64 4.135l-2.02-1.164a.08.08 0 0 1-.038-.057V6.075a4.5 4.5 0 0 1 7.375-3.453l-.142.08-4.778 2.758a.795.795 0 0 0-.393.681zm1.097-2.365l2.602-1.5 2.607 1.5v2.999l-2.597 1.5-2.607-1.5z";

// Languages with icons
const languages = [
  { name: 'Go', icon: siGo, color: '#00ADD8' },
  { name: 'TypeScript', icon: siTypescript, color: '#3178C6' },
  { name: 'JavaScript', icon: siJavascript, color: '#F7DF1E' },
  { name: 'Python', icon: siPython, color: '#3776AB' },
  { name: 'PHP', icon: siPhp, color: '#777BB4' },
  { name: 'Java', icon: null, color: '#ED8B00' },
  { name: 'C#', icon: null, color: '#512BD4' },
  { name: 'C', icon: siC, color: '#A8B9CC' },
  { name: 'C++', icon: siCplusplus, color: '#00599C' },
  { name: 'Rust', icon: siRust, color: '#CE422B' },
  { name: 'Zig', icon: siZig, color: '#F7A41D' },
];
---

<section class="py-20 px-4 border-t border-glass-border overflow-hidden">
  <div class="max-w-5xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        Plug into your AI workflow
      </h2>
      <p class="text-gray-400">
        MCP server, JSON output, or CLAUDE.md rules. Your choice.
      </p>
    </div>

    <!-- Main integrations - Featured cards -->
    <div class="grid md:grid-cols-3 gap-6 mb-12 items-stretch">
      <!-- Claude Code - FEATURED -->
      <div class="group relative h-full">
        <div class="absolute inset-0 bg-gradient-to-br from-orange-500/30 to-transparent rounded-2xl blur-xl opacity-50 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative glass p-6 rounded-2xl border border-orange-500/20 hover:border-orange-500/40 transition-all duration-300 hover:-translate-y-1 h-full flex flex-col">
          <div class="absolute top-3 right-3">
            <span class="text-[10px] px-2 py-0.5 rounded-full bg-orange-500/20 text-orange-400 font-medium">Recommended</span>
          </div>
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-orange-500 to-orange-700 flex items-center justify-center shadow-lg shadow-orange-500/30 flex-shrink-0">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                <path d={siAnthropic.path}/>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-white text-lg">Claude Code</h3>
              <p class="text-gray-500 text-sm">Anthropic CLI</p>
            </div>
          </div>
          <p class="text-gray-400 text-sm mt-auto">One command setup. Claude searches your code semantically.</p>
        </div>
      </div>

      <!-- Cursor -->
      <div class="group relative h-full">
        <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative glass p-6 rounded-2xl border border-white/10 hover:border-white/20 transition-all duration-300 hover:-translate-y-1 h-full flex flex-col">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-gray-600 to-gray-900 flex items-center justify-center shadow-lg flex-shrink-0">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                <path d={siCursor.path}/>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-white text-lg">Cursor</h3>
              <p class="text-gray-500 text-sm">AI-first editor</p>
            </div>
          </div>
          <p class="text-gray-400 text-sm mt-auto">Native MCP integration. Add grepai as a tool in settings.</p>
        </div>
      </div>

      <!-- Codex (OpenAI) -->
      <div class="group relative h-full">
        <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/20 to-transparent rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative glass p-6 rounded-2xl border border-emerald-500/10 hover:border-emerald-500/30 transition-all duration-300 hover:-translate-y-1 h-full flex flex-col">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-emerald-700 flex items-center justify-center shadow-lg shadow-emerald-500/20 flex-shrink-0">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                <path d={openaiPath}/>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-white text-lg">Codex CLI</h3>
              <p class="text-gray-500 text-sm">OpenAI agent</p>
            </div>
          </div>
          <p class="text-gray-400 text-sm mt-auto">JSON output for seamless AI integration.</p>
        </div>
      </div>
    </div>

    <!-- Secondary integrations -->
    <div class="flex flex-wrap justify-center gap-3 mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass text-sm hover:bg-white/5 transition-colors">
        <div class="w-6 h-6 rounded-full bg-teal-500/20 flex items-center justify-center">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="#14b8a6" stroke-width="2">
            <path d="M2 12h6l3-9 3 18 3-9h5"/>
          </svg>
        </div>
        <span class="text-gray-300">Windsurf</span>
      </div>
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass text-sm hover:bg-white/5 transition-colors">
        <div class="w-6 h-6 rounded-full bg-blue-500/20 flex items-center justify-center">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="#4285F4">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
          </svg>
        </div>
        <span class="text-gray-300">Gemini CLI</span>
      </div>
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass text-sm hover:bg-white/5 transition-colors">
        <div class="w-6 h-6 rounded-full bg-purple-500/20 flex items-center justify-center">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="#a855f7">
            <circle cx="12" cy="12" r="3"/><path d="M12 2v4m0 12v4m10-10h-4M6 12H2m15.07-7.07l-2.83 2.83M9.76 14.24l-2.83 2.83m0-10.14l2.83 2.83m4.48 4.48l2.83 2.83"/>
          </svg>
        </div>
        <span class="text-gray-300">MCP Server</span>
      </div>
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass text-sm hover:bg-white/5 transition-colors">
        <div class="w-6 h-6 rounded-full bg-yellow-500/20 flex items-center justify-center">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="#F59E0B">
            <path d="M4 6h16M4 12h16M4 18h10"/>
          </svg>
        </div>
        <span class="text-gray-300">JSON output</span>
      </div>
    </div>

    <!-- Languages support -->
    <div class="text-center">
      <p class="text-gray-500 text-sm mb-4">Call graph tracing for</p>
      <div class="flex flex-wrap justify-center gap-3">
        {languages.map((lang) => (
          <div class="group flex items-center gap-2 px-3 py-2 rounded-lg bg-white/5 hover:bg-white/10 transition-colors cursor-default">
            {lang.icon ? (
              <svg width="16" height="16" viewBox="0 0 24 24" fill={lang.color} class="opacity-70 group-hover:opacity-100 transition-opacity">
                <path d={lang.icon.path}/>
              </svg>
            ) : (
              <span class="w-4 h-4 rounded text-[10px] font-bold flex items-center justify-center" style={`background: ${lang.color}; color: white;`}>
                {lang.name.charAt(0)}
              </span>
            )}
            <span class="text-gray-400 text-sm group-hover:text-white transition-colors">{lang.name}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
